<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
<div class="container">
  <br />
  <% if(req.user) { %>
  <div class="row">
    <h3>Welcome <%= req.user.displayName %></h3>
  </div>
  <% } else { %>
  <div class="row">
    <div class="col-md-4">
      <form action="/auth/login" method="POST" class="form-signin">
        <h3 class="form-signin-heading">Log in</h3>
        <h4>Please log in to continue.</h4>
        <div class="form-group">
          <div class="row">
            <div class="col-md-8">
              <label>EMAIL ADDRESS</label>
              <input type="text" class="form-control" placeholder="Email" name="email">
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-8">
              <label>PASSWORD</label>
              <input type="password" class="form-control" placeholder="Password" name="password">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <input type="submit" class="btn btn-lg btn-primary" value="Log me in!"/>
          </div>
        </div>
        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
      </form>
    </div>

    <div class="col-md-4">
      <form action="/auth/signup" method="POST" class="form-signin">
        <h3 class="form-signin-heading">Create an account</h3>
        <h4>New to Simply Movie?<br />Please create an account to continue.</h4>
        <div class="form-group">
          <div class="row">
            <div class="col-md-8">
              <label>FIRST NAME</label>
              <input type="text" class="form-control" placeholder="First Name" name="firstname">
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-8">
              <label>LAST NAME</label>
              <input type="text" class="form-control" placeholder="Last Name" name="lastname">
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-8">
              <label>EMAIL</label>
              <input type="text" class="form-control" placeholder="Email" name="email">
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-8">
              <label>CONFIRM EMAIL</label>
              <input type="text" class="form-control" placeholder="Confirm email" name="confirmemail">
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-8">
              <label>PASSWORD</label>
              <input type="password" class="form-control" placeholder="Password" name="password">
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-8">
              <label>CONFIRM PASSWORD</label>
              <input type="password" class="form-control" placeholder="Confirm password" name="confirmpassword">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <input type="submit" class="btn btn-lg btn-primary" value="Sign me up!"/>
          </div>
        </div>
        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
      </form>
    </div>

    <div class="col-md-4">
      <h3>Log in with Facebook</h3>
      <h4>It's fast and easy.</h4>
      <a class="btn btn-lg btn-primary" href="/auth/facebook" role="button">Log in with Facebook</a>
      <p><strong>We'll never post anything without your permission.</strong></p>
    </div>
  </div>
  <% } %>
</div>
